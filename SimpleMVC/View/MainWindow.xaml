<Window x:Class="SimpleMVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleMVC"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <WrapPanel VerticalAlignment="Center" >
                    <TextBlock Text="First name: " VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <TextBox x:Name="fName" Margin="10,0,0,0" Height="25" Width="200"/>
                </WrapPanel>

                <WrapPanel VerticalAlignment="Center" Grid.Row="1" >
                    <TextBlock Text="Second name: " VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <TextBox x:Name="sName" Margin="10,0,0,0" Height="25" Width="200" />
                </WrapPanel>

                <Button Content="OK" Grid.Row="3" Height="25" Width="100" HorizontalAlignment="Right" Margin="0,0,10,0" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
